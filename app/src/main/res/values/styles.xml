<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/vermelholimos</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">@color/vermelholimosescuro</item>
        <item name="colorAccent">@color/vermelholimos</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@color/vermelholimos</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <!-- Cor vermelha -->
        <item name="android:textColor">@color/vermelholimos</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/vermelholimos</item>
        <item name="colorControlActivated">@color/vermelholimos</item>
    </style>

</resources>
