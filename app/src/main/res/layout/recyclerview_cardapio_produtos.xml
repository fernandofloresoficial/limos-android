<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgFotoProduto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            app:backgroundImage="@drawable/imgproduto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/txtProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/ubuntu"
            android:text="TextView"
            android:textColor="@color/cinzaescuro"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgFotoProduto"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/ubuntu"
            android:text="bhfdb"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/SplitLine_hor3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgFotoProduto"
            app:layout_constraintTop_toBottomOf="@+id/txtProduto" />

        <TextView
            android:id="@+id/txtPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/ubuntu"
            android:text="4,50"
            android:textColor="@color/vermelholimosmedio"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/SplitLine_hor2"
            app:layout_constraintEnd_toEndOf="@+id/txtApartir"
            app:layout_constraintStart_toStartOf="@+id/txtApartir"
            app:layout_constraintTop_toBottomOf="@+id/txtApartir" />

        <TextView
            android:id="@+id/txtServe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="1"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/cinzaclaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="1dp"
            android:layout_height="40dp"

            android:layout_marginStart="12dp"
            android:background="@color/cinzaclaro"
            app:layout_constraintBottom_toBottomOf="@+id/SplitLine_hor1"
            app:layout_constraintStart_toEndOf="@+id/textView12" />

        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="1dp"
            android:layout_height="40dp"

            android:layout_marginStart="12dp"
            android:background="@color/cinzaclaro"
            app:layout_constraintBottom_toBottomOf="@+id/SplitLine_hor1"
            app:layout_constraintStart_toEndOf="@+id/txtTempo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="Serve"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/SplitLine_hor2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="pessoa(s)"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/txtServe" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SplitLine_hor1"
            app:layout_constraintStart_toEndOf="@+id/SplitLine_hor2"
            fresco:srcCompat="@drawable/clock" />

        <TextView
            android:id="@+id/txtTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="40 - 45 min"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/SplitLine_hor2"
            app:layout_constraintStart_toEndOf="@+id/imageView3" />

        <TextView
            android:id="@+id/txtApartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="A partir de"
            android:textColor="@color/vermelholimosescuro"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SplitLine_hor3"
            app:layout_constraintTop_toBottomOf="@+id/txtDescricao" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>