<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/txtFantasia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu"
            android:singleLine="true"
            android:text="Casa da Esfiha..."
            android:textColor="@color/preto"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtData"
            app:layout_constraintStart_toEndOf="@+id/imgExtratoCashback"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtValorCashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="R$100,00"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgExtratoCashback"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloPedido" />

        <View
            android:id="@+id/SplitLine_hor4"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/cinzaclaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgExtratoCashback"
            app:layout_constraintStart_toStartOf="@+id/imgExtratoCashback"
            app:layout_constraintTop_toBottomOf="@+id/imgExtratoCashback" />

        <TextView
            android:id="@+id/txtPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="00000000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/txtTituloPedido"
            app:layout_constraintTop_toBottomOf="@+id/txtFantasia" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="27/11/2018 18:24:59"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            fresco:layout_constraintStart_toEndOf="@+id/SplitLine_hor2" />

        <TextView
            android:id="@+id/txtTituloPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="Pedido:"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtPedido"
            app:layout_constraintStart_toEndOf="@+id/imgExtratoCashback" />

        <ImageView
            android:id="@+id/imgExtratoCashback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>