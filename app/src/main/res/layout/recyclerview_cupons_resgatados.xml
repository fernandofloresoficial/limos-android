<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crvCupons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:visibility="visible"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="dom"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkDom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkDom"
            app:layout_constraintTop_toBottomOf="@+id/chkDom"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="qui"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkQui"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkQui"
            app:layout_constraintTop_toBottomOf="@+id/chkQui"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="ter"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkTer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkTer"
            app:layout_constraintTop_toBottomOf="@+id/chkTer"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="qua"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkQua"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkQua"
            app:layout_constraintTop_toBottomOf="@+id/chkQua"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="sab"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkSab"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkSab"
            app:layout_constraintTop_toBottomOf="@+id/chkSab"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/txtTituloPedido"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="sex"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkSex"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkSex"
            app:layout_constraintTop_toBottomOf="@+id/chkSex"
            tools:ignore="HardcodedText,SmallSp" />

        <CheckBox
            android:id="@+id/chkDom"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chkSab"
            app:layout_constraintTop_toTopOf="@+id/chkSab"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/chkSab"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/chkDom"
            app:layout_constraintStart_toEndOf="@+id/chkSex"
            app:layout_constraintTop_toTopOf="@+id/chkSex"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/chkSex"
            android:layout_width="20dp"
