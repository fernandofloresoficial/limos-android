            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/chkSab"
            app:layout_constraintStart_toEndOf="@+id/chkQui"
            app:layout_constraintTop_toTopOf="@+id/chkQui"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/chkQui"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/chkSex"
            app:layout_constraintStart_toEndOf="@+id/chkQua"
            app:layout_constraintTop_toTopOf="@+id/chkQua"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/chkQua"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/chkQui"
            app:layout_constraintStart_toEndOf="@+id/chkTer"
            app:layout_constraintTop_toTopOf="@+id/chkTer"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/chkTer"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/chkQua"
            app:layout_constraintStart_toEndOf="@+id/chkSeg"
            app:layout_constraintTop_toTopOf="@+id/chkSeg"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/chkSeg"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:button="@drawable/my_checkbox"
            android:checked="false"
            android:enabled="false"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/chkTer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCupomValidade"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/txtCupomDesconto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:text="50%"
            android:textColor="@color/cinzaescuro"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/txtCupomValidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:text="Validade: 01/01/19"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCupomDesconto"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="seg"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkSeg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkSeg"
            app:layout_constraintTop_toBottomOf="@+id/chkSeg"
            tools:ignore="HardcodedText,SmallSp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>