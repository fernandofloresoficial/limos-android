<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDescricaoCarrinho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"

            android:text="testefdfdfdsfdfdfdfdfdsfdsfdsfdsffsfdfsdfsdfsdfdsfdsfsdfdsfdsf"
            android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0"
            fresco:layout_constraintEnd_toStartOf="@+id/txtPrecoCarrinho"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintTop_toBottomOf="@+id/txtProdutoCarrinho" />

        <TextView
            android:id="@+id/txtProdutoCarrinho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Bacon"
            android:textAlignment="viewStart"
            android:textColor="@color/cinzasuperescuro"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imgMenos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgMais"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/imgsomar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/imgsomar" />

        <TextView
            android:id="@+id/txtQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:text="0"
            android:textColor="@color/cinzaescuro"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgMais"
            app:layout_constraintEnd_toStartOf="@+id/imgMais"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imgMenos"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtQuantidade"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/imgsubtrair" />

        <TextView
            android:id="@+id/txtPrecoCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:text="R$5,00"
            android:textColor="@color/cinzasuperescuro"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgMais"
            app:layout_constraintStart_toStartOf="@+id/imgMenos"
            app:layout_constraintTop_toBottomOf="@+id/imgMais" />

        <TextView
            android:id="@+id/txtRemoverCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:text="Remover"
            android:textColor="@color/vermelholimosescuro"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescricaoCarrinho" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>